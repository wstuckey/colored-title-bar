{
  "name": "colored-title-bar",
  "displayName": "Colored Title Bar",
  "description": "Apply a random, visually appealing color to the VS Code title bar â€” perfect for distinguishing workspaces at a glance.",
  "version": "0.1.0",
  "publisher": "colored-title-bar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/colored-title-bar"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "title bar",
    "color",
    "theme",
    "workspace",
    "customization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coloredTitleBar.randomize",
        "title": "Colored Title Bar: Randomize Color"
      },
      {
        "command": "coloredTitleBar.pickHue",
        "title": "Colored Title Bar: Pick Color Family"
      },
      {
        "command": "coloredTitleBar.reset",
        "title": "Colored Title Bar: Reset to Default"
      }
    ],
    "configuration": {
      "title": "Colored Title Bar",
      "properties": {
        "coloredTitleBar.colorOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply a new random title bar color each time VS Code starts."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext ts",
    "test:unit": "npm run compile && mocha 'out/test/**/*.test.js'",
    "test": "npm run test:unit",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
